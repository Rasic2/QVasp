CC = g++
CCFLAG = -O3 -std=gnu++17 -fPIC -shared

PYTHONROOT = /Library/Frameworks/Python.framework/Versions/3.8
INCLUDE = -I$(PYTHONROOT)/lib/python3.8/site-packages/pybind11/include -I$(PYTHONROOT)/include/python3.8 
LIBRARY = -L$(PYTHONROOT)/lib/python3.8/config-3.8-darwin
LIB = -lpython3.8

c_doscar_load.so: c_doscar_load.cpp
	$(CC) $(CCFLAG) -o c_doscar_load.so c_doscar_load.cpp $(INCLUDE) $(LIBRARY) $(LIB)

.PHONY: clean
clean:
	rm -rf *.so

